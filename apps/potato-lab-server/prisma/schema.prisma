generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SourcePlatform {
  BINANCE
  BYBIT
  MEDX
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  createdAt DateTime @default(now())
  portfolioId Portfolio[] @relation ("FavouritePortfolio")
}

model Portfolio {
  id Int @id @unique // 4211252854221772544
  name String
  profileUrl String
  performance Json
  sourceUrl String
  sourcePlatform SourcePlatform
  positions Position[]
  favouriteBy User[] @relation("FavouritePortfolio")
}

model Position {
  id String @id @unique // 0_BTCUSDT_BOTH
  symbol String
  size Float
  entryPrice Float
  margin Float
  portfolio Portfolio  @relation(fields: [portfolioId], references: [id])
  portfolioId Int
}